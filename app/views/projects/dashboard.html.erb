<h1>Listado de proyectos</h1>
<form method="get" action="<%= projects_dashboard_path %>">
    <div class="input-group">
        <select name="state" class="custom-select col-3" id="inputGroupSelect04">
            <option selected value="">Seleccionar estado del proyecto</option>
            <option value="Propuesta">Propuesta</option>
            <option value="En progreso">En progreso</option>
            <option value="Terminado">Terminado</option>
            <option value="">Mostrar todos</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary mt-3 mb-3">Filtrar</button>
</form>

<div class="card-columns">
   <% @project.each do |project| %>
        <div class="card">
            <h3 class="card-title text-center"><%= project.title %></h3>
            <div class="card-body">
                <p class="card-text"><%= project.description %></p>
                <h6 class="card-subtitle mb-2 text-muted"><td><%= project.start_date %></td></h6>
                <h6 class="card-subtitle mb-2 text-muted"><td><%= project.deadline %></td></h6>
                <h6 class="card-subtitle mb-2 text-muted"><td><%= project.state %></td></h6>
            </div>
        </div>
        <% end %>
</div>
